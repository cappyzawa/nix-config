{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  timezone: 'Asia/Tokyo',
  schedule: [
    'before 8am every weekday',
  ],
  minimumReleaseAge: '7 days',
  extends: [
    'config:recommended',
  ],
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'before 8am on monday',
    ],
  },
  rebaseWhen: 'behind-base-branch',
  automerge: true,
  platformAutomerge: true,
  major: {
    automerge: false,
  },
  prConcurrentLimit: 5,
  packageRules: [
    {
      description: 'Group akari theme updates',
      groupName: 'akari-theme',
      matchPackageNames: [
        '/^cappyzawa/akari-/',
      ],
    },
  ],
}
